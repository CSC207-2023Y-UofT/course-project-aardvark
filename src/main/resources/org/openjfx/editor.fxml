<?xml version="1.0" encoding="UTF-8"?>

<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<?import javafx.scene.canvas.Canvas?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="1080" prefWidth="1920" style="-fx-background-color: #EFEDF0;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.EditorController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="212.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints />
    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="60.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="8.0" GridPane.rowIndex="1">
         <children>
            <Button id="home-btn" mnemonicParsing="false" onAction="#switchToProjects">
               <tooltip>
                  <Tooltip text="Your Projects">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Tooltip>
               </tooltip>
            </Button>
            <Button fx:id="renameBtn" id="rename-btn" mnemonicParsing="false" text="Untitled Project" textFill="#222">
               <font>
                  <Font name="Segoe UI Semibold" size="16.0" />
               </font>
               <tooltip>
                  <Tooltip text="Rename Project" />
               </tooltip>
            </Button>
            <Button fx:id="resizeBtn" id="resize-btn" mnemonicParsing="false" onAction="#resizeCanvas">
               <tooltip>
                  <Tooltip text="Resize Canvas">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Tooltip>
               </tooltip>
            </Button>
            <Button fx:id="clearBtn" id="clear-btn" mnemonicParsing="false" onAction="#clearCanvas">
               <tooltip>
                  <Tooltip text="Clear Canvas">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Tooltip>
               </tooltip>
            </Button>
            <Button id="undo-btn" mnemonicParsing="false">
               <tooltip>
                  <Tooltip text="Undo">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Tooltip>
               </tooltip>
            </Button>
            <Button id="redo-btn" mnemonicParsing="false">
               <tooltip>
                  <Tooltip text="Redo">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Tooltip>
               </tooltip>
            </Button>
            <Button fx:id="exportBtn" id="export-btn" mnemonicParsing="false" onAction="#onSave">
               <tooltip>
                  <Tooltip text="Export Canvas">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Tooltip>
               </tooltip>
            </Button>
         </children>
         <padding>
            <Insets left="12.0" right="12.0" />
         </padding>
      </HBox>
      <FlowPane alignment="CENTER_LEFT" hgap="8.0" prefWrapLength="200.0" rowValignment="TOP" vgap="4.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <RadioButton fx:id="freeDrawBtn" id="free-draw-btn" mnemonicParsing="false" text="Brush">
               <toggleGroup>
                  <ToggleGroup fx:id="selectTool" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="textBoxBtn" id="text-box-btn" mnemonicParsing="false" text="Text" toggleGroup="$selectTool" />
            <RadioButton mnemonicParsing="false" text="Circle" toggleGroup="$selectTool" />
            <RadioButton mnemonicParsing="false" text="Rectangle" toggleGroup="$selectTool" />
         </children>
      </FlowPane>
      <VBox spacing="12.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <children>
            <VBox spacing="8.0" style="-fx-background-color: #fff; -fx-background-radius: 4;">
               <children>
                  <Label text="Brush Settings" textFill="#222222">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Label>
                  <ColorPicker fx:id="colorPicker" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                               minWidth="-Infinity" prefHeight="30.0" prefWidth="184.0"/>
                  <HBox alignment="CENTER" spacing="8.0">
                     <children>
                        <TextField fx:id="brushSize" text="18"/>
                        <Label maxHeight="-Infinity" maxWidth="300.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" text="Thickness" textFill="#222222" HBox.hgrow="ALWAYS">
                           <padding>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </padding>
                           <font>
                              <Font name="Segoe UI" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="12.0" left="8.0" right="8.0" top="8.0" />
               </padding>
               <VBox.margin>
                  <Insets right="12.0" />
               </VBox.margin>
            </VBox>
            <VBox spacing="8.0" style="-fx-background-color: #fff; -fx-background-radius: 4;">
               <children>
                  <Label text="Text Settings" textFill="#222222">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font></Label>
                  <ComboBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="184.0" promptText="Font Family" />
                  <ColorPicker maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="184.0">
                     <value>
                        <Color />
                     </value></ColorPicker>
                  <HBox spacing="8.0">
                     <children>
                        <Label maxHeight="-Infinity" maxWidth="300.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="36.0" style="-fx-border-radius: 4; -fx-border-color: #ccc;" text="Font Size:" textFill="#222222" HBox.hgrow="ALWAYS">
                           <padding>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </padding>
                           <font>
                              <Font name="Segoe UI" size="12.0" />
                           </font></Label>
                        <Button id="text-increase-btn" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0">
                           <tooltip>
                              <Tooltip text="Increase Font Size">
                                 <font>
                                    <Font name="Segoe UI" size="14.0" />
                                 </font>
                              </Tooltip>
                           </tooltip>
                        </Button>
                        <Button id="text-decrease-btn" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0">
                           <tooltip>
                              <Tooltip text="Decrease Font Size">
                                 <font>
                                    <Font name="Segoe UI" size="14.0" />
                                 </font>
                              </Tooltip>
                           </tooltip>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="12.0" left="8.0" right="8.0" top="8.0" />
               </padding>
               <VBox.margin>
                  <Insets right="12.0" />
               </VBox.margin>
            </VBox>
            <VBox spacing="8.0" style="-fx-background-color: #fff; -fx-background-radius: 4;">
               <children>
                  <Label text="Shapes Settings" textFill="#222222">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Label>
                  <ColorPicker maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="184.0">
                     <value>
                        <Color />
                     </value>
                  </ColorPicker>
                  <HBox alignment="CENTER" spacing="8.0">
                     <children>
                        <CheckBox alignment="TOP_LEFT" mnemonicParsing="false" text="Fill shape" textFill="#222222">
                           <font>
                              <Font name="Segoe UI" size="12.0" />
                           </font>
                        </CheckBox>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="12.0" left="8.0" right="8.0" top="8.0" />
               </padding>
               <VBox.margin>
                  <Insets right="12.0" />
               </VBox.margin>
            </VBox>
         </children>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </VBox>
      <ScrollPane prefHeight="200.0" prefWidth="200.0" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 12, 0, 0, 2);" GridPane.rowIndex="2">
         <content>
            <Canvas fx:id="canvas" id="canvas" height="700" width="1200" />
         </content>
         <GridPane.margin>
            <Insets bottom="12.0" left="12.0" right="12.0" />
         </GridPane.margin>
      </ScrollPane>
   </children>
</GridPane>
